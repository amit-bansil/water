package cps.jarch.application;

import cps.jarch.gui.resources.MessageBundle;

import javax.swing.Icon;

/**
 * TODO buildNumber/version support through tiny files generated by build system
 * show version on splash screen rather than graphic
 * OPTIMIZE faster loading w/o resourceaccessor? just hardcode
 * @version 1.0
 * @author Amit Bansil
 */
public class ApplicationDescription {
	
	private final Icon splash;
	private final String id,title,typeExtension,typeName;
	
	public ApplicationDescription(MessageBundle res) {
		splash=res.tryLoadIcon("splash");
		title=res.loadString("title");
		id=res.loadString("IDName");
		typeExtension=res.loadString("fileType_extension");
		typeName=res.loadString("fileType_name");
	}
	/**
	 * 
	 * @return nullable
	 */
	public Icon getSplashImage() {
		return splash;
	}

	public String getFullName() {
		return getTitle()+" v"+getVersion()+" (build "+getBuildNumber()+ ')';
	}
	//like BrightnessLab, what is used for internal id purposes
	//keep this constant
	public String getIDName() {
		return id;
	}
	//like Brightness Lab
	//what user sees
	public String getTitle(){
		return title;
	}
	public String getFileTypeExtension() {
		return typeExtension;
	}
	public String getFileTypeName() {
		return typeName;
	}
	//like 1.1
//	@SuppressWarnings({"MethodMayBeStatic"})
    public String getVersion() {
        //TODO implement
		return "0";
	}
	//increase on each release build
//	@SuppressWarnings({"MethodMayBeStatic"})
    public long getBuildNumber() {
        //TODO implement
        return 0;
	}

}
