package cps.jarch.data.value;

import java.util.EventObject;

//TODO kill this event, it is better to track old/new value just 
/**
 * @param <T> 
 */
public class ValueChange<T> extends EventObject{
	private final T oldValue,newValue;
	
    public ValueChange(ROValue<T> source,T oldValue,T newValue){
        super(source);
        this.oldValue=oldValue;
        this.newValue=newValue;
    }
    public final T getOldValue(){
        return oldValue;
    }
    public final T getNewValue(){
        return newValue;
    }
    
    @Override public final String toString() {
		return "ValueChangeEvent:[oldValue=" + oldValue + ",newValue=" + newValue
				+ ",source=" + source + "]";
	}
}
