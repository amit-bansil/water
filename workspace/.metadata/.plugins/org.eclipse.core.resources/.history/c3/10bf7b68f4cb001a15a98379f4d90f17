package cps.water.moleculedisplay;

import cps.jarch.gui.util.ComponentProxy;

import javax.swing.Box;
import javax.swing.JComponent;

/**
 * <p>TODO document DsiplayEditor
 * </p>
 * @version $Id$
 * @author Amit Bansil
 */
public class DisplayControls implements ComponentProxy{
	private DisplayModel model;
	private final JComponent panel;
	
	public DisplayControls(final DisplayModel model) {
		super();
		this.model = model;
		panel=Box.createHorizontalBox();
	}

	/**
	 * @return the model
	 */
	public DisplayModel getModel() {
		return model;
	}

	/**
	 * @param model the model to set
	 */
	public void setModel(DisplayModel model) {
		this.model = model;
	}
	public final JComponent getComponent() {
		return panel;
	}
}
