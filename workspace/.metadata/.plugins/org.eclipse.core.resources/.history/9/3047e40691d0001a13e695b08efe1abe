package cps.water;

import com.incors.plaf.alloy.AlloyLookAndFeel;
import com.incors.plaf.alloy.themes.bedouin.BedouinTheme;

import cps.jarch.simulation.snapshot.SnapshotChooser;
import cps.water.data.DataViewer;
import cps.water.moleculedisplay.DisplayController;
import cps.water.simulation.SimulationController;

import javax.swing.JDialog;
import javax.swing.JFrame;
import javax.swing.JMenuBar;
import javax.swing.JPanel;
import javax.swing.JPopupMenu;
import javax.swing.UIManager;
import javax.swing.UnsupportedLookAndFeelException;
import javax.swing.WindowConstants;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Toolkit;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;

/**
 * <p>TODO document GUI
 * </p>
 * @version $Id$
 * @author Amit Bansil
 */
//TODO io for GUI state
public class GUI {
	private final JFrame background;
	private final JDialog frame;
	private final Application app;
	//TODO remove these controllers and move them into the app?
	private final SimulationController simController;
	private final DisplayController displayController;
	
	public GUI(final Application app) {
		this.app=app;
		
		//disable lightweight popus so they don't conflict with heavyweight components
		JPopupMenu.setDefaultLightWeightPopupEnabled(false);
		
		//setup alloy
		//WARNING this may cause prolems on OSX
		JFrame.setDefaultLookAndFeelDecorated(true);
		JDialog.setDefaultLookAndFeelDecorated(true);
		// register
		com.incors.plaf.alloy.AlloyLookAndFeel.setProperty("alloy.licenseCode",
			"u#Amit_Bansil#i30hb#d7jx00");
		// install alloy
		try {
			UIManager.setLookAndFeel(new AlloyLookAndFeel(new BedouinTheme()));
		} catch (UnsupportedLookAndFeelException e) {
			// should not happen
			throw new Error(e);
		}
		
		//create black background
		background = new JFrame();
		background.setUndecorated(true);
		background.getContentPane().setBackground(Color.BLACK);//TODO stripes
		background.setLocation(0, 0);
		background.setSize(Toolkit.getDefaultToolkit().getScreenSize());
		
		//create main frame
		frame=new JDialog(background,"Water",false);
		frame.setJMenuBar(buildMenuBar());
		
		//create layout
		JPanel mainPanel=new JPanel(new BorderLayout(0,0));
		
		//create components
		DataViewer dataViewer1=new DataViewer(app.getModel().getDataViewer1Model());
		DataViewer dataViewer2=new DataViewer(app.getModel().getDataViewer2Model());
		SnapshotChooser snapshotChooser=new SnapshotChooser(app.getModel());
		displayController=new DisplayController(app.getModel().getFocusedSelection());
		simController=new SimulationController(app.getModel().getFocusedSelection());
		
		//add components too layout
		
		//bindings
		//TODO propert quit
		frame.setDefaultCloseOperation(WindowConstants.DISPOSE_ON_CLOSE);
		frame.addWindowListener(new WindowAdapter() {
			@Override public void windowClosed(WindowEvent e) {
				background.dispose();
				app.shutdown();
				simController.shutdown();
				displayController.shutdown();
			}
		});
	}

	private JMenuBar buildMenuBar() {
		return null;
	}

	public void show() {
		frame.pack();
		//centerframe on screen
		frame.setVisible(true);
	}
}
